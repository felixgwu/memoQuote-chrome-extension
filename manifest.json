{
    "manifest_version": 2,

    "name": "memoQuote",
    "description": "Chrome Extension of memoQuote",
    "version": "0.1",

    "icons": {
        "16": "static/images/icon16.png",
        "19": "static/images/icon19.png",
        "38": "static/images/icon38.png",
        "48": "static/images/icon48.png",
        "128": "static/images/icon128.png"
    },

    "browser_action": {
      "default_icon": "static/images/icon19.png",
      "default_popup": "popup.html"
    },

    "background": {
        "scripts": ["static/js/jquery-2.1.3.min.js", "addQuote.js"]
    },

    "options_ui": {
        "page": "options.html",
        "chrome_style": true,
        "open_in_tab": false
    },

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": [
                "static/css/scriptReset.css",
                "static/css/detail_modal.css",
                "static/Semantic-UI-1.6.2/components/button.css",
                "static/Semantic-UI-1.6.2/components/modal.css",
                "static/Semantic-UI-1.6.2/components/input.css",
                "static/Semantic-UI-1.6.2/components/dimmer.css",
                "static/Semantic-UI-1.6.2/components/form.css",
                "static/Semantic-UI-1.6.2/components/transition.css"
            ],
            "js": [
                "static/js/jquery-2.1.3.min.js", 
                "static/Semantic-UI-1.6.2/semantic.min.js",
                "static/js/detail_modal.js"
            ]
        }
    ],

    "permissions": [
        "contextMenus",
        "tabs",
        "cookies",
        "storage",
        "http://localhost/",
        "http://memoquote.herokuapp.com/"
    ]
}
